datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id        String                 @id @default(uuid())
  sessions  WorkoutSession[]
  logs      ExerciseLog[]
  state     SuggestedWorkoutState?
  createdAt DateTime               @default(now())
}

model WorkoutType {
  id       Int              @id @default(autoincrement())
  name     String           @unique
  sessions WorkoutSession[]
}

model WorkoutSession {
  id            String        @id @default(uuid())
  user          User          @relation(fields: [userId], references: [id])
  userId        String
  workoutType   WorkoutType   @relation(fields: [workoutTypeId], references: [id])
  workoutTypeId Int
  logs          ExerciseLog[]
  date          DateTime      @default(now())
}

model Exercise {
  id          String              @id @default(uuid())
  name        String
  muscleGroup String
  gifUrl      String
  logs        ExerciseLog[]
  baseOf      ExerciseVariation[] @relation("Base")
  variationOf ExerciseVariation[] @relation("Variation")
}

model ExerciseVariation {
  id             String   @id @default(uuid())
  baseExercise   Exercise @relation("Base", fields: [baseExerciseId], references: [id])
  baseExerciseId String
  variation      Exercise @relation("Variation", fields: [variationId], references: [id])
  variationId    String
}

model ExerciseLog {
  id         String         @id @default(uuid())
  session    WorkoutSession @relation(fields: [sessionId], references: [id])
  sessionId  String
  exercise   Exercise       @relation(fields: [exerciseId], references: [id])
  exerciseId String
  user       User           @relation(fields: [userId], references: [id])
  userId     String
  weight     Float
  reps       Int
  order      Int
  createdAt  DateTime       @default(now())
}

model SuggestedWorkoutState {
  userId        String   @id
  user          User     @relation(fields: [userId], references: [id])
  muscleGroup   String
  lastTrainedAt DateTime
}
